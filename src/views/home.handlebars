<h1 class="text-3xl font-bold text-center my-6">Administrador de Productos</h1>

<script>console.log("✅ home.handlebars cargado");</script>

<form id="product-form" class="space-y-4 max-w-lg mx-auto">
    <input type="text" name="title" placeholder="Título" class="w-full p-2 border rounded" required>
    <input type="text" name="description" placeholder="Descripción" class="w-full p-2 border rounded" required>
    <input type="text" name="category" placeholder="Categoría" class="w-full p-2 border rounded" required>
    <input type="number" name="price" placeholder="Precio" class="w-full p-2 border rounded" required>
    <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-700">Agregar Producto</button>
</form>

<select id="category-filter" class="border p-2 rounded max-w-lg mx-auto block my-6">
    <option value="all">Todas</option>
    {{#each categories}}
        <option value="{{this}}">{{this}}</option>
    {{/each}}
</select>

<div id="product-list" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 p-4 mt-6">
    {{#each products.docs}}
        <div class="border p-4 rounded shadow bg-white hover:shadow-lg transition-shadow">
            <h2 class="text-xl font-bold text-gray-800">{{title}}</h2>
            <p class="text-gray-600 mb-1">{{description}}</p>
            <p class="text-green-700 font-semibold">Precio: ${{price}}</p>
            <p class="text-sm text-gray-500">Categoría: {{category}}</p>
            <button class="mt-3 bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded">Agregar al carrito</button>
        </div>
    {{/each}}
</div>